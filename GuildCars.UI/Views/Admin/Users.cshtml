@model IEnumerable<GuildCars.UI.Models.UserListViewModel>

@{
    ViewBag.Title = "Users";
}

<div class="row">
    <h2>Users</h2>
    <a href="@Url.Action("AddUser", "Admin")">Add a new user</a>
</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.LastName</td>
                        <td>@m.FirstName</td>
                        <td>@m.Email</td>
                        <td>@m.Roles</td>
                        <td>@Html.ActionLink("Edit", "EditUser", "Admin", new { id = m.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
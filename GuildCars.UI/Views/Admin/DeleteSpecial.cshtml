@model GuildCars.Models.Tables.Special

@{
    ViewBag.Title = "DeleteSpecial";
}


<div class="col-xs-12 col-sm-9">
    <div class="row">
        <div class="col-xs-12">
            <h3>Delete @Model.Title</h3>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.SpecialID)
                <p>Are you sure that you wish to delete the special @Html.DisplayFor(m => m.Title)?</p>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            @Html.ActionLink("Cancel", "Specials", "Admin", null, new { @class = "btn btn-sm btn-info" })
            }
        </div>
    </div>
</div>



